generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  BUSINESS
  DATA_ENTRY
  BLOG_ENTRY
}

enum CompanyType {
  PRODUCT
  SERVICE
}

type ContactInfo {
  email String?
  phone String?
}

enum ClaimStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Plan {
  FREE
  GROWTH
  SCALE
  CUSTOM
}

enum CampaignStatus {
  DRAFT
  SENT
}

// --------------------------------------------------
// Main Models
// --------------------------------------------------


model BusinessClaim {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  userId         String      @db.ObjectId
  companyId      String?     @db.ObjectId 
  businessName   String?
  website        String?
  categoryId     String?     @db.ObjectId
  city           String?
  state          String?
  country        String?
  workEmail      String
  jobTitle       String?
  verificationDoc String?  
  
  status         ClaimStatus @default(PENDING)
  createdAt      DateTime    @default(now())

  user           User        @relation(fields: [userId], references: [id])
  company        Company?    @relation(fields: [companyId], references: [id])
}



model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String    @unique
  role      Role      @default(USER)
  emailVerified DateTime?
  password  String?
  image     String?
  gender    String?
  country   String?
  language  String?
  reviews   Review[]
  accounts  Account[]
  sessions  Session[]
  helpfulVotes  HelpfulVote[] 
  reports       Report[]
  notifications Notification[]
  companyId     String?   @db.ObjectId 
  company       Company?  @relation(fields: [companyId], references: [id])
  claims        BusinessClaim[]
  pendingChanges PendingChange[]
  leadsSent      Lead[]
  
  createdAt     DateTime?  @default(now())
  updatedAt     DateTime?  @updatedAt
}


model Company {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  slug              String      @unique
  logoImage         String?
  websiteUrl        String?
  briefIntroduction String?
  claimed           Boolean   @default(false)
  companyType       CompanyType? @default(SERVICE)
  city              String?
  country           String?
  state             String?  
  subCity           String?
  address           String?
  contact           ContactInfo?
  keywords          String[]
  reviews           Review[]
  otherImages       String[]    @default([])
  badges            String[]    @default([])
  featured          Boolean     @default(false)
  rating            Float       @default(0) 
  reviewCount       Int         @default(0)
  analytics         CompanyAnalytics[]
  owners            User[]   
  claims            BusinessClaim[]
  views             Int       @default(0)
  createdAt         DateTime? @default(now()) 
  updatedAt         DateTime? @updatedAt
  updates           BusinessUpdate[]
  plan              Plan      @default(FREE)
  searchStats       SearchQueryStat[]
  campaigns         Campaign[]
  isSponsored       Boolean   @default(false)
  sponsoredScope    String?  
  emailUsageCount      Int      @default(0)
  emailUsageResetDate  DateTime? @default(now())
  isFrozen          Boolean   @default(false)
  claimedAt         DateTime?
  leads             Lead[]
  features          String[]    @default([])
  customEmailLimit  Int?     
  customUpdateLimit Int?
  enableAnalytics     Boolean? 
  enableLeadGen       Boolean? 
  hideCompetitors     Boolean?
  showcaseItems ShowcaseItem[]

  domainVerified       DateTime?  
  domainVerifyToken    String?    
  domainVerifyEmail    String?

  categoryId String   @db.ObjectId
  category   Category @relation(fields: [categoryId], references: [id])

  subCategoryId String      @db.ObjectId
  subCategory   SubCategory @relation(fields: [subCategoryId], references: [id])

  @@index([categoryId])
  @@index([subCategoryId])
  @@index([keywords])
  @@index([name])
}

model ShowcaseItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  images      String[] 
  companyId   String   @db.ObjectId
  type        CompanyType  @default(SERVICE)
  linkUrl     String?
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Review {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  starRating        Float
  reviewTitle       String
  comment           String?
  dateOfExperience  DateTime
  keywords          String[]      @default([])
  createdAt         DateTime      @default(now())
  relatedImages     String[]      @default([])
  helpfulVotes      HelpfulVote[] 
  reports           Report[]
  isFlagged         Boolean       @default(false)
  adminMessage      String?     
  reads             Int           @default(0)
  ownerReply        String? 
  ownerReplyDate    DateTime?

  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  companyId String  @db.ObjectId
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([companyId])
}

// --------------------------------------------------
// Category Models
// --------------------------------------------------

model Category {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String        @unique
  slug          String
  subCategories SubCategory[]
  companies     Company[]
  linkedBlogs   Blog[]
}

model SubCategory {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  slug       String    @unique
  companies  Company[]

  categoryId String   @db.ObjectId
  category   Category @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
}


model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model HelpfulVote {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  reviewId  String   @db.ObjectId
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@unique([userId, reviewId])
}

model Report {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  reviewId  String?   @db.ObjectId
  reason    String  
  status    String   @default("PENDING") 
  resolution String?
  archived    Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  review    Review?   @relation(fields: [reviewId], references: [id],onDelete: SetNull)
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  title     String
  message   String
  type      String   @default("INFO") // INFO, SUCCESS, WARNING, ALERT
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SupportTicket {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  type        String   
  status      String   @default("OPEN")
  name        String
  email       String
  message     String
  category    String?  
  reviewAuthor String?
  reviewTitle  String?
  deviceInfo  String?
  companyName String?
  jobTitle    String?
  createdAt   DateTime @default(now())
}


model PlatformAnalytics {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  date           DateTime @default(now())
  
  totalUsers     Int
  totalReviews   Int
  totalCompanies Int
  claimedCount   Int
  
  newUsers       Int      @default(0)
  newReviews     Int      @default(0)
  newCompanies   Int      @default(0)
  
  sentimentBreakdown Json? // e.g. { "5": 100, "4": 20, ... }
  avgSentiment       Float   @default(0)
}


model CompanyAnalytics {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  companyId      String   @db.ObjectId
  date           DateTime @default(now())
  
  trustScore     Float   
  reviewCount    Int
  
  nss            Int      @default(0) 
  profileViews   Int      @default(0)
  clickThroughs  Int      @default(0) 
  leadsGenerated Int      @default(0)
  callsGenerated Int      @default(0)
  
  company        Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  @@unique([companyId, date])
}

model InviteToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
}

model BusinessUpdate {

  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String   
  imageUrl  String
  linkUrl   String?
  createdAt DateTime @default(now())
  companyId String   @db.ObjectId 
  company   Company  @relation(fields: [companyId], references: [id])

  @@index([companyId])
  
}

model SearchQueryStat {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  companyId String    @db.ObjectId
  
  date      DateTime  @default(now()) 
  query     String  
  
  impressions Int      @default(0) 
  clicks      Int      @default(0)
  adClicks    Int      @default(0)
  location    String   @default("Global")
  userRegion  String?  @default("unknown")
  
  company   Company    @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, query,location,userRegion, date]) 
  @@index([companyId, date])
}

model Blog {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  category        String
  metaTitle       String
  metaDescription String
  metaKeywords    String
  blogUrl         String   @unique // The page slug (e.g., "my-first-blog")
  headline        String
  content         String
  imageUrl        String?
  imagePath       String? 
  authorName      String
  linkedCategoryId String? @db.ObjectId
  linkedCategory   Category? @relation(fields: [linkedCategoryId], references: [id])
  linkedCity       String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Campaign {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  companyId   String   @db.ObjectId
  company     Company  @relation(fields: [companyId], references: [id])

  name        String   
  subject     String   
  senderEmail String   
  
  logoUrl     String?  
  bannerUrl   String?  
  content     String   
  
  status      CampaignStatus @default(DRAFT)
  recipients  String[] 
  sentCount   Int      @default(0)
  sentAt      DateTime?

  templateType  String   @default("INVITE") 
  buttonText    String? 
  buttonUrl     String? 

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PendingChange {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  model       String  
  action      String   
  targetId    String?  
  
  data        Json   
  
  status      String   @default("PENDING") 
  adminNote   String?  
  
  requesterId String   @db.ObjectId
  requester   User     @relation(fields: [requesterId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Lead {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  
  companyId   String   @db.ObjectId
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  userName    String
  userEmail   String
  message     String
  
  userId      String?  @db.ObjectId
  user        User?    @relation(fields: [userId], references: [id])

  source      String   @default("PROFILE_QUOTE") 
  createdAt   DateTime @default(now())

  @@index([companyId])
}